<h1 id="title">Order Management</h1>
  <div class="outside">
  <!--Main Layout-->
  <main>

    <!-- Main Navigation-->
  
    <header>
      <div class="link">
        <a href="/">Home</a>
      </div>
      <div class="link">
        <a href="inventory.handlebars">Manage Inventory</a>
      </div>
      <div class="link">
        <a href="">Manage Orders</a>
      </div>
      <div class="link">
        <a href="customer.handlebars">Manage Customers</a>
      </div>
    </header>

    <section class="tableWrapper">
      <h2>Current Orders</h2>
      <input class="search" type="text" id="myInput" placeholder="'Quick Search' Enter your search criteria ...">

      <table>
         <tr class="tableHeader">
          <th>Order Date</th>
          <th>Customer Name</th>
          <th>Payment Type</th>
          <th>Order Complete</th>
          <th>Order Shipped</th>
        </tr>
        <tbody id="myTable">
          {{#each orders}}
          <tr>
            <td hidden>{{order_Num}}</td>
            <td>{{moment order_Date format="DD MMM, YYYY"}}</td>
            <td>{{first_Name}} {{last_Name}}</td>
            <td>{{payment_Type}}</td>
            {{#if order_Complete}}
            <td>Yes</td>
            {{else}}
            <td>No</td>
            {{/if}}
             {{#if order_Shipped}}
            <td>Yes</td>
            {{else}}
            <td>No</td>
            {{/if}}
            <th>
              <button onclick="window.location.href='/orderItems'" hidden>See Order</button>
              <button onclick="editOrder({{order_Num}})">Edit</button>
              <button onclick="deleteOrder({{order_Num}})">Delete</button>
            </th>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </section>
    <button class="add" onclick="window.location.href='addOrder.handlebars'">Add New Order</button>
  </div>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
  
  </main>