  <h1 id="title">Order Management</h1>
  <div class="outside">
  <!--Main Layout-->
  <main>
    <!-- Main Navigation-->
    <header>
      <div class="link">
        <a href="/">Home</a>
      </div>
      <div class="link">
        <a href="inventory.handlebars">Manage Inventory</a>
      </div>
      <div class="link">
        <a href="order.handlebars">Manage Orders</a>
      </div>
      <div class="link">
        <a href="customer.handlebars">Manage Customers</a>
      </div>
    </header>
    <section  class="formWrapper">
      <h2>Form for a New Order</h2>
      <form method="post", class="orderForm">

        <div class="orderDate">
          <label for="oDate">Order Date (Format: yyyy-mm-dd)</label><br>
          <input name="oDate" type="text">
        </div>



        <div class="customerName">
          <label for="customerName">Customer Name <em>*(required)</em></label><br>
          <select name="customerName" id="customerName" required>
            <option disabled selected value> -- Select Customer -- </option>
            {{#each customers}}
            <option value="{{first_Name}}">{{first_Name}} {{last_Name}}</option>
            {{/each}}
          </select>
        </div>



        <div class="orderItems">
          <div class="row">
            <div class="col">
              <h2 hidden>Checkbox</h2>
            </div>
            <h2>Item</h2>
            <h2>Item Type</h2>
            <h2>Quantity</h2>
            <h2>Price</h2>
            <h2>Discount</h2>
          </div>
          {{#each items}}
          <div class="row">
            <div class="col">
              <input type="checkbox" id="check1" name="item_Num" value={{item_Num}}>
            </div>
            <div class="col"> 
              <span>{{item_Name}}</span>
            </div>
            <div class="col">
              <span name="item_Type">{{item_Type}}</span>
            </div>
            <div class="col">
              <input name="quant" type="number" min=0 step="1">
            </div>
            <div class="col">
              <span>$</span><span>{{item_Price}}</span>
            </div>
            <div class="col">
              <input name="discount" type="number" min=0 step="1" value=0>
            </div>
          </div>
          {{/each}}
          <p>Discount is a percentage as a whole number. So if the discount is 50% input 50</p>
        </div>
          <input  class = "submit" type="submit" name="Submit" value=Submit>
      </form>
    </section> 
  </div>
  </main>