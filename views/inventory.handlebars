  <!--Main Layout-->
  <main>

    <!-- Main Navigation-->
    
    <header>
      <div class="link">
        <a href="/">Home</a>
      </div>
      <div class="link">
        <a href="">Manage Inventory</a>
      </div>
      <div class="link">
        <a href="/order">Manage Orders</a>
      </div>
      <div class="link">
        <a href="/customer">Manage Customers</a>
      </div>
    </header>

    <section class="tableWrapper">
      <h2>Current Inventory</h2>
      <input class="search" type="text" id="myInput" placeholder="'Quick Search' Enter your search criteria ...">

      <table id="table-body" class="table">
      </table>
      <button class="add" onclick="window.location.href='/addItem'">Add New Inventory</button>
    </section>
  </div>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
</main>
